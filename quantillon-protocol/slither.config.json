{
  "filter_paths": "lib,test,out,cache,node_modules",
  "exclude_informational": false,
  "exclude_low": false,
  "exclude_medium": false,
  "exclude_high": false,

  "detectors_to_exclude": [
    "naming-convention",
    "external-function"
  ],

  "solc_args": "--optimize --via-ir",
  "solc_remaps": [
    "forge-std/=lib/forge-std/src/",
    "openzeppelin/=lib/openzeppelin-contracts/",
    "ozu/=lib/openzeppelin-contracts-upgradeable/"
  ],

  "json": "slither-report.json",
  "sarif": "slither-report.sarif"
}
